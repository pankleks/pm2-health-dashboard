{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": "$tsc"
        },
        {
            "label": "sass",
            "type": "shell",
            "command": "node-sass",
            "args": [
                "./Client/Dashboard.scss",
                "./Client/Dashboard.css"
            ],
            "problemMatcher": "$node-sass"
        },
        {
            "label": "all",
            "dependsOn": [
                "typescript",
                "sass"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}